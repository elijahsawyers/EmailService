{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Mail",
  "description": "An email.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "maxLength": 100
    },
    "email": {
      "type": "string",
      "maxLength": 100
    },
    "subject": {
      "type": "string",
      "maxLength": 100
    },
    "message": {
      "type": "string"
    }
  },
  "required": [
    "name",
    "email",
    "subject",
    "message"
  ]
}